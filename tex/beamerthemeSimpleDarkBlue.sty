%----------------------------------------------------------------------------------------
%   BEAMER THEME - SimpleDarkBlue
%----------------------------------------------------------------------------------------

\mode<presentation>

%----------------------------------------------------------------------------------------
%   REQUIRED PACKAGES
%----------------------------------------------------------------------------------------

\RequirePackage{tikz}
\RequirePackage{xcolor}

%----------------------------------------------------------------------------------------
%   SETUP COLORS
%----------------------------------------------------------------------------------------

% Define colors
\definecolor{primary}{HTML}{2C3E50}
\definecolor{secondary}{HTML}{3498DB}
\definecolor{accent}{HTML}{E74C3C}
\definecolor{background}{HTML}{ECF0F1}
\definecolor{frametitle}{HTML}{2C3E50}
\definecolor{title}{HTML}{2C3E50}
\definecolor{subtitle}{HTML}{7F8C8D}

%----------------------------------------------------------------------------------------
%   SETUP FONTS
%----------------------------------------------------------------------------------------

\setbeamerfont{title}{size=\Large,series=\bfseries}
\setbeamerfont{subtitle}{size=\large,series=\mdseries}
\setbeamerfont{author}{size=\normalsize,series=\mdseries}
\setbeamerfont{institute}{size=\small,series=\mdseries}
\setbeamerfont{date}{size=\small,series=\mdseries}
\setbeamerfont{frametitle}{size=\large,series=\bfseries}
\setbeamerfont{framesubtitle}{size=\normalsize,series=\mdseries}

%----------------------------------------------------------------------------------------
%   SETUP COLORS
%----------------------------------------------------------------------------------------

\setbeamercolor{title}{fg=title}
\setbeamercolor{subtitle}{fg=subtitle}
\setbeamercolor{author}{fg=primary}
\setbeamercolor{institute}{fg=subtitle}
\setbeamercolor{date}{fg=subtitle}
\setbeamercolor{frametitle}{fg=frametitle}
\setbeamercolor{framesubtitle}{fg=subtitle}
\setbeamercolor{background canvas}{bg=background}
\setbeamercolor{normal text}{fg=primary}
\setbeamercolor{structure}{fg=secondary}
\setbeamercolor{alerted text}{fg=accent}

%----------------------------------------------------------------------------------------
%   SETUP BLOCKS
%----------------------------------------------------------------------------------------

\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamercolor{block title}{fg=white,bg=secondary}
\setbeamercolor{block body}{fg=primary,bg=white}
\setbeamercolor{block title alerted}{fg=white,bg=accent}
\setbeamercolor{block body alerted}{fg=primary,bg=white}
\setbeamercolor{block title example}{fg=white,bg=secondary}
\setbeamercolor{block body example}{fg=primary,bg=white}

%----------------------------------------------------------------------------------------
%   SETUP ITEMIZE
%----------------------------------------------------------------------------------------

\setbeamertemplate{itemize items}[circle]
\setbeamercolor{itemize item}{fg=secondary}
\setbeamercolor{itemize subitem}{fg=secondary}

%----------------------------------------------------------------------------------------
%   SETUP ENUMERATE
%----------------------------------------------------------------------------------------

\setbeamertemplate{enumerate items}[default]
\setbeamercolor{enumerate item}{fg=secondary}
\setbeamercolor{enumerate subitem}{fg=secondary}

%----------------------------------------------------------------------------------------
%   SETUP NAVIGATION
%----------------------------------------------------------------------------------------

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}{}

%----------------------------------------------------------------------------------------
%   SETUP TITLE PAGE
%----------------------------------------------------------------------------------------

\setbeamertemplate{title page}{
    \begin{tikzpicture}[remember picture,overlay]
        % Background
        \fill[color=background] (current page.south west) rectangle (current page.north east);
        
        % Title area background
        \fill[color=secondary!20] (current page.south west) rectangle ([yshift=-4cm]current page.north east);
        
        % Title
        \node[anchor=north,yshift=-2cm] at (current page.north) {
            \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle
        };
        
        % Subtitle
        \node[anchor=north,yshift=-3.5cm] at (current page.north) {
            \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle
        };
        
        % Author
        \node[anchor=south,yshift=2cm] at (current page.south) {
            \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor
        };
        
        % Institute
        \node[anchor=south,yshift=1.5cm] at (current page.south) {
            \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute
        };
        
        % Date
        \node[anchor=south,yshift=1cm] at (current page.south) {
            \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate
        };
    \end{tikzpicture}
}

%----------------------------------------------------------------------------------------
%   SETUP FRAME TITLE
%----------------------------------------------------------------------------------------

\setbeamertemplate{frametitle}{
    \vspace{0.5cm}
    \begin{beamercolorbox}[wd=\paperwidth,ht=1.5cm,dp=0.5cm]{frametitle}
        \usebeamerfont{frametitle}\insertframetitle
    \end{beamercolorbox}
}

%----------------------------------------------------------------------------------------
%   SETUP FOOTER
%----------------------------------------------------------------------------------------

\setbeamertemplate{footline}{
    \begin{beamercolorbox}[wd=\paperwidth,ht=0.5cm,dp=0.2cm]{white}
        \hspace{1cm}
        \usebeamerfont{date}\usebeamercolor[fg]{subtitle}\insertframenumber/\inserttotalframenumber
        \hfill
        \usebeamerfont{date}\usebeamercolor[fg]{subtitle}\insertshorttitle
        \hspace{1cm}
    \end{beamercolorbox}
}

%----------------------------------------------------------------------------------------
%   SETUP SECTIONS
%----------------------------------------------------------------------------------------

\AtBeginSection[]{
    \begin{frame}
        \frametitle{Overview}
        \tableofcontents[currentsection]
    \end{frame}
}

\mode<all> 